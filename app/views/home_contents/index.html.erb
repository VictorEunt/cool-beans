<div id="hero-image">
  <div class="container-fluid">
    <div id="hero-background">
      <h1 id="home-title">Cool Beans</h1>
      <h2 id="home-subtitle">Denton's Finest</br>Dive Bar</h2>
      <div id="food-menu-button"><%= link_to "Our Menu", menu_path, class: "btn btn-primary btn-lg" %></div><br />
      <div id="specials-button"><%= link_to "The Specials", specials_path, class: "btn btn-default btn-lg" %></div>
    </div>
  </div>
</div>

<div id="hours-container">
<div class="container-fluid">
  <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div id="all-ages">
          <p id="ages-text">All Ages</p>
          <p>Cool Beans is for ALL AGES everyday from 11am to 9pm. Come enjoy the best food and fun on Fry.</p>
      </div>
    </div>
  <% @hours.each do |hour| %>
    <% if hour.name == 'Regular Hours' %>
        <div class="col-xs-12 col-sm-6">
          <div id="hours-style">
            <p id="hours-text">Our Hours</p>
            <p><%= hour.note %></p>
            <% if user_signed_in? %>
                <div class="button">
                  <%= link_to 'Edit Hours', edit_hour_path(hour), class: "btn btn-default" %>
                </div>
            <% end %>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
</div>

<div id="weekend-container">
  <% @weekends.each do |weekend| %>
    <% if weekend.title == 'The Weekend' %>
    <div class="container-fluid">
      <div id="weekend-styles">
      <div class="row">
        <div class="col-xs-12 col-sm-6">
          <div class="home-container-heading">
            <h1><%= weekend.title %></h1>
            <h6><%= weekend.description %></h6>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-6">
          <div id="hover-effect">
            <div class="thumbnail" data-toggle="modal" data-target="#weekendModal1">
               <%= image_tag(weekend.image_one.url, :class=>'photo-image', :alt=>'weekend special') %>
              <div class="caption">
                <h3><%= weekend.first_special %></h3>
                <p><%= weekend.first_special_description %></p>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6">
          <div id="hover-effect">
            <div class="thumbnail" data-toggle="modal" data-target="#weekendModal2">
               <%= image_tag(weekend.image_two.url, :class=>'photo-image', :alt=>'weekend special') %>
              <div class="caption">
                <h3><%= weekend.second_special %></h3>
                <p><%= weekend.second_special_description %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-6">
          <% if user_signed_in? %>
            <div class="button">
              <%= link_to 'Edit Weekend', edit_weekend_path(weekend), class: "btn btn-default" %>
            </div>
          <% end %>
        </div>
      </div>
      </div>
    </div>
    <% end %>
  <% end %> 
</div>

<div id="weekend-modal-styles">
<!-- Weekend Modal 1 -->
  <% @weekends.each do |weekend| %>
    <% if weekend.title == 'The Weekend' %>
<div class="modal fade" id="weekendModal1" tabindex="-1" role="dialog" aria-labelledby="weekendLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= weekend.first_special %></h4>
      </div>
      <div class="modal-body">
        <%= image_tag(weekend.image_one.url, :class=>'img-responsive', :alt=>'weekend special') %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default">The Specials Menu</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<% end %>
<% end %>

<!-- Weekend Modal 2 -->
  <% @weekends.each do |weekend| %>
    <% if weekend.title == 'The Weekend' %>
<div class="modal fade" id="weekendModal2" tabindex="-1" role="dialog" aria-labelledby="weekendLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= weekend.second_special %></h4>
      </div>
      <div class="modal-body">
        <%= image_tag(weekend.image_two.url, :class=>'img-responsive', :alt=>'weekend special') %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default">Sunday Brunch Menu</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<% end %>
<% end %>
</div>

