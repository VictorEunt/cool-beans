<div class="container-fluid">
  <div id="specials-menu-form">
    <%= form_for(@specials_menu) do |f| %>
    <% if @specials_menu.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@specials_menu.errors.count, "error") %> prohibited this specials_menu from being saved:</h2>

        <ul>
        <% @specials_menu.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1>Our Specials</h1>
      </div>
      <div class="panel-body">
      <div class="form-group">
        <p><%= f.label :name %></p>
        <p><%= f.text_field :name, class: 'input-lg' %></p>
      </div>

      <div class="form-group">
        <p><%= f.label :description %></p>
        <p><%= f.text_area :description, class: 'input-lg' %></p>
      </div>

       <div class="form-group">
          <%= f.submit "Save", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
      <div class="panel-footer">
        <%= link_to 'New Menu item', new_menu_item_path %>
      </div>
    </div>
    <% end %>
  </div>
</div>