<div class="container-fluid">
  <div class="row">
  <div class="xs-12 col-md-6 col-md-offset-3">
    <h1>Edit or Add Menu Section Descriptions</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Menu Section</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @menu_items.reverse_each do |menu_item| %>
        <% if menu_item.name == 'note' %> 
          <tr>
            <td><%= menu_item.menu_section %></td>
            <td><%= menu_item.description %></td>
            <td><%= link_to 'Update', edit_menu_item_path(menu_item) %></td>
            <td><%= link_to 'Destroy', menu_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        <% end %>
      </tbody>
    </table>

    <br>
      <div class="well-lg">
        <%= link_to 'Go to Dashboard', dashboard_path, class: "btn btn-default" %>
      </div>
    </div>
  </div>
</div>