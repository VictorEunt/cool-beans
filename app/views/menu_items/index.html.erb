<div id="menu-style">
  
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-9 col-lg-9">
      <h1>Our Burgers</h1>
      <% @menu_photos.each do |menu_photo| %>
        <% if menu_photo.name == 'Burger-One' %>
          <div class="thumbnail">
            <%= link_to image_tag(menu_photo.photo.url, :class=>'food-photo', :alt=>'Burger'), menu_photo %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <% @menu_items.each do |menu_item| %>
    <% if menu_item.menu_section == 'Burgers' %>
      <div class="row">
        <div class="col-sm-12 col-md-9 col-lg-9">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><%= menu_item.name %></h3>
            </div>
            <div class="panel-body">
              <% if menu_item.description.present? %>
                <p><%= menu_item.description %></p>
              <% end %>
              <div class="menu-price">
                <h5><%= menu_item.price %></h5>
              </div>
              <% if menu_item.extra_one.present? %>
                <div class="menu-extra">
                  <h5><%= menu_item.extra_one %> <%= menu_item.extra_one_price %></h5>
                </div>
              <% end %>
              <% if menu_item.extra_two.present? %>
                <div class="menu-extra">
                  <h5><%= menu_item.extra_two %> <%= menu_item.extra_two_price %></h5>
                </div>
              <% end %>
              <% if menu_item.extra_three.present? %>
                <div class="menu-extra">
                  <h5><%= menu_item.extra_three %> <%= menu_item.extra_three_price %></h5>
                </div>
              <% end %>
            </div>
            <% if user_signed_in? %>
              <div class="panel-footer">      
                <div class="actions">
                  <%= link_to edit_menu_item_path(menu_item) do %>
                    <span class="glyphicon glyphicon-edit"></span>
                    Edit
                  <% end %>
                  <%= link_to menu_item, method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <span class="glyphicon glyphicon-trash"></span>
                    Delete
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

  
