<h1>Listing menu_items</h1>

<table>
  <thead>
    <tr>
      <th>Menu section</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Extra one</th>
      <th>Extra one price</th>
      <th>Extra two</th>
      <th>Extra two price</th>
      <th>Extra three</th>
      <th>Extra three price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @menu_items.each do |menu_item| %>
      <tr>
        <td><%= menu_item.menu_section %></td>
        <td><%= menu_item.name %></td>
        <td><%= menu_item.description %></td>
        <td><%= menu_item.price %></td>
        <td><%= menu_item.extra_one %></td>
        <td><%= menu_item.extra_one_price %></td>
        <td><%= menu_item.extra_two %></td>
        <td><%= menu_item.extra_two_price %></td>
        <td><%= menu_item.extra_three %></td>
        <td><%= menu_item.extra_three_price %></td>
        <td><%= link_to 'Show', menu_item %></td>
        <td><%= link_to 'Edit', edit_menu_item_path(menu_item) %></td>
        <td><%= link_to 'Destroy', menu_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Menu item', new_menu_item_path %>
