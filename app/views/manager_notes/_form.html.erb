<div class="container-fluid">
  <div id="note-form">
  <%= form_for(@manager_note) do |f| %>
    <% if @manager_note.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@manager_note.errors.count, "error") %> prohibited this manager_note from being saved:</h2>

        <ul>
        <% @manager_note.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="xs-12 col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2>Email Form</h2>
        </div>
        <div class="panel-body">
        <div class="form-group">
          <p><%= f.label :subject %></p>
          <p><%= f.text_field :subject, class: "input-lg" %></p>
        </div>
        <div class="form-group">
          <p><%= f.label :note, "Body of Email" %></p>
          <p><%= f.text_area :note, class: "input-lg", id: "email-box" %></p>
        </div>
        <div class="form-group">
          <%= f.submit "OK", class: "btn btn-primary btn-lg btn-block" %>
        </div>
        </div>
        <div class="panel-footer">
          <%= link_to 'Go to Dashboard', dashboard_path, class: "btn btn-default" %>
        </div>
      <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
