<div class="container-fluid">
  <div class="row">
  <div class="xs-12 col-md-6 col-md-offset-3">
    <h1>Edit or Add Menu Photos</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Image Section</th>
          <th>Image Name</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @menu_photos.each do |menu_photo| %>
          <tr>
            <td><%= menu_photo.name %></td>
            <td><%= menu_photo.photo_file_name %></td>
            <td><%= link_to 'Update', edit_menu_photo_path(menu_photo) %></td>
            <td><%= link_to 'Delete', menu_photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
        <div class="well-lg">
          <%= link_to 'Go to Dashboard', dashboard_path, class: "btn btn-default" %>
      </div>
    </div>
  </div>
</div>