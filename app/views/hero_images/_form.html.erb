<div class="container-fluid">
  <div id="pdf-form">

  <%= form_for(@hero_image) do |f| %>
  <% if @hero_image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hero_image.errors.count, "error") %> prohibited this hero_image from being saved:</h2>

      <ul>
      <% @hero_image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="xs-12 col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>PDF Menu Form</h2>
      </div>

    <div class="panel-body">
      <div class="form-group">
        <p><%= f.label :name %></p>
        <p><%= f.text_field :name, class: "input-lg" %></p>
      </div>
      <div class="form-group">
        <p><%= f.label :image %></p>
        <%= f.file_field :image, class: "btn btn-default btn-lg btn-block" %>
      </div>
      <div class="form-group">
        <%= f.submit "Upload PDF", class: "btn btn-primary btn-lg btn-block" %>
      </div>
    </div>
    <div class="panel-footer">
      <%= link_to 'Go to Dashboard', dashboard_path, class: "btn btn-default" %>
    </div>
    <% end %>
    </div>
    </div>
  </div>
</div>
</div>
