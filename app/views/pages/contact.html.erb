<div id="contact-hours-container">
<div class="container-fluid">
  <div class="row">
  <% @hours.each do |hour| %>
    <% if hour.name == 'Regular Hours' %>
        <div class="col-xs-12 col-sm-6">
          <div id="hours-style">
            <p id="hours-text">Our Hours</p>
            <p><%= hour.note %></p>
            <p><%= hour.message %></p>
            <% if user_signed_in? %>
                <div class="button">
                  <%= link_to 'Edit Hours', edit_hour_path(hour), class: "btn btn-primary" %>
                </div>
            <% end %>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
</div>

