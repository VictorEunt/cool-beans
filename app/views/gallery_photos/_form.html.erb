<div class="container-fluid">
  <div id="gallery-form">

  <%= form_for(@gallery_photo) do |f| %>
    <% if @gallery_photo.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@gallery_photo.errors.count, "error") %> prohibited this gallery_photo from being saved:</h2>

        <ul>
        <% @gallery_photo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h2>Gallery Photo Form</h2>
    </div>

  <div class="panel-body">
    <div class="form-group">
      <p><%= f.label :name %></p>
      <p><%= f.text_field :name, class: "input-lg" %></p>
    </div>
    <div class="form-group">
      <p><%= f.label :description %></p>
      <p><%= f.text_field :description, class: "input-lg" %></p>
    </div>
    <div class="form-group">
      <p><%= f.label :image %></p>
      <%= f.file_field :image, class: "btn btn-default btn-lg btn-block" %>
    </div>
    <div class="form-group">
      <%= f.submit "Upload Photo", class: "btn btn-primary btn-lg btn-block" %>
    </div>
  </div>
  <div class="panel-footer">
    <%= link_to 'Go to Manager', manager_path, class: "btn btn-default" %>
  </div>
  <% end %>
  </div>
  </div>
</div>
