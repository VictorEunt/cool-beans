<div class="container-fluid">
  <div id="hours-form">
  <%= form_for(@hour) do |f| %>
    <% if @hour.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@hour.errors.count, "error") %> prohibited this hour from being saved:</h2>

        <ul>
        <% @hour.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
<div class="row">
  <div class="xs-12 col-md-6 col-md-offset-3">    
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2>Store Hours</h2>
      <p>The note appears on the home and contact page. The message only appears on the contact page.</p>
    </div>

    
      <div class="panel-body">
        <div class="form-group">
          <p><%= f.label :name %></p>
          <p><%= f.text_field :name, class: "input-lg" %></p>
        </div>
        <div class="form-group">
          <p><%= f.label :note %></p>
          <p><%= f.text_field :note, class: "input-lg" %></p>
        </div>
         <div class="form-group">
          <p><%= f.label :message %></p>
          <p><%= f.text_area :message, class: "input-lg" %></p>
        </div>
         <div class="form-group">
            <%= f.submit "Save", class: "btn btn-primary btn-lg btn-block" %>
        </div>
        </div>
        <div class="panel-footer">
          <%= link_to 'Go to Dashboard', dashboard_path, class: "btn btn-default" %>
        </div>
      <% end %>
      </div>
    </div>
    </div>
</div>
</div>