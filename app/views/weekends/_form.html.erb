<div class="container-fluid">
  <div id="weekend-form">
    <%= form_for(@weekend) do |f| %>
      <% if @weekend.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@weekend.errors.count, "error") %> prohibited this weekend from being saved:</h2>

          <ul>
          <% @weekend.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h2>Weekend Form</h2>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <p><%= f.label :title %></p>
        <p><%= f.text_field :title, class: "input-lg" %></p>
      </div>
      <div class="form-group">
        <p><%= f.label :description %></p>
        <p><%= f.text_area :description, class: "input-lg" %></p>
      </div>
      <h4>First Weekend Special</h4>
      <div class="form-group">
        <p><%= f.label :first_special %></p>
        <p><%= f.text_field :first_special, class: "input-lg" %></p>
      </div>
      <div class="form-group">
        <p><%= f.label :first_special_description %></p>
        <p><%= f.text_area :first_special_description, class: "input-lg" %></p>
      </div>
      <div class="form-group">
        <p><%= f.label :image_one %></p>
        <%= f.file_field :image_one, class: "btn btn-default btn-lg btn-block" %>
      </div>
      <h4>Second Weekend Special</h4>
      <div class="form-group">
        <p><%= f.label :second_special %></p>
        <p><%= f.text_field :second_special, class: "input-lg" %></p>
      </div>
      <div class="form-group">
        <p><%= f.label :second_special_description %></p>
        <p><%= f.text_area :second_special_description, class: "input-lg" %></p>
      </div>
      <div class="form-group">
        <p><%= f.label :image_two %></p>
        <%= f.file_field :image_two, class: "btn btn-default btn-lg btn-block" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: "btn btn-primary btn-lg btn-block" %>
     </div>
    </div>
    <div class="panel-footer">
      <h5><%= link_to 'New Weekend', new_classic_path %></h5>
    </div>
    <% end %>
    </div>
  </div>
</div>
